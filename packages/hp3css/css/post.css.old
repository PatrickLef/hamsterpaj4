/*
	General outlines for post-related output.
	This is included at the top of the page, so that other css-files may change properties set in this one.
*/


/*
	Posts in post list
*/

.post
{
	border: 1px solid #ababab;
	margin-bottom: 5px;
	background: #e0e7ea;
}

.post .answer_text
{
	border-top: 1px solid #ababab;
	border-bottom: 1px solid #ababab;
	padding: 3px;
}

.post .answer_header
{
	background: url('http://images.hamsterpaj.net/common_icons/answer_16.png') no-repeat;
	padding-left: 22px;
	margin-bottom: 0px;
}

.post .quote_text
{
	border-top: 1px solid #ababab;
	border-bottom: 1px solid #ababab;
	padding: 3px;
	font-style: italic;
}

.post .post_reference
{
	cursor: pointer;
}

.post .post_referred
{
	border-top: 1px solid #ababab;
	background: #eeeeee;
	display: none;
}

.post .post_referred .post_referred_header
{
	padding: 3px;
	margin: 0px;
}

.post .post_referred .post_referred_text
{
	padding: 3px;
	margin-left: 16px;
}

.post .addition_text
{
	border: 1px solid #ababab;
	padding: 3px;
}

.post .addition_header
{
	margin-top: 8px;
}

.post .controls
{
	margin-left: 90px;
	height: 25px;
	clear: both;
}

.post .controls input
{
	background: none;
	border: none;
    cursor: pointer;
    padding: 0;
}

.post .author
{
	padding: 2px;
	float: left;
	width: 75px;
	border-right: 1px solid #cdcdcd;
	min-height: 50px;
}

.post .author
{
	font-size: xx-small;
}

.post .author_text
{
	float: left;
	display: block;
	padding: 2px;
	border-bottom: 1px solid #cdcdcd;
	height: 16px;
}
.post .date_time
{
	float: right;
	display: block;
	clear: right;
	padding: 2px;
	border-bottom: 1px solid #cdcdcd;
	height: 16px;
}

.post .badge
{
	float: left;
	padding: 2px;
	padding-left: 5px;
}

.post .content
{
	padding: 3px;
	float: left;
	width: 540px;
	max-height: 400px;
	overflow: auto;
}

.post .content .censored
{
	background: black;
	color: black;
}

.post .post_addition
{
	display: none;
	margin-left: 90px;

}

.post .post_addition textarea
{
}


.post .signature
{
	font-style: italic;
	border-top: 1px solid #ababab;
	margin-top: 3px;
}

.short_post
{
	padding: 2px;
	background: #eeeeee;
	width: 540px;
	border: 1px solid #ababab;
	margin-bottom: 5px;
}

.short_post .author
{
	float: left;
	width: 75px;
}

.short_post .content
{
	float: left;
	width: 540px;
}

.low_quality_post .post, .low_quality_header
{
	background: #ededed;
}

.low_quality_header
{
	margin-bottom: 5px;
	cursor: pointer;
	width: 630px;
	border: 1px solid #cdcdcd;
	padding: 3px;
	color: #ababab;
	font-size: 12px;
}

.low_quality_post .post
{
	margin-top: -3px;
	margin-bottom: 5px;
	border-top: 0px;
	display: none;
}

.removed_post h2
{
	background: #f6ced1;
	margin-bottom: 5px;
	width: 630px;
	border: 1px solid #8f2e21;
	padding: 3px;
	color: #6d6d6d;
	font-size: 12px;
}



/*
	The post form
*/

.mceSelectList {
	border: 1px solid #565656;
}

.post_form
{
	background: #e7e7e7;
	border-top: 2px groove #eee;
	border-left: 2px groove #eee;
	border-right: 2px ridge #eee;
	border-bottom: 2px ridge #eee;
	padding: 5px;
	margin-top: 10px;
}

.post_form h5
{
	margin: 0px;
	padding: 0px;
	margin-bottom: 2px;
	margin-top: 5px;
}

.input_left select
{
	width: 99%;
}

.input_right select
{
	width: 99%;
}

.post_form input
{
	border: 1px solid #aeb7c0;
	width: 99%;
}

.post_form textarea
{
	border: 1px solid #aeb7c0;
	margin-top: 0px;
	width: 99%;
}

.post_form select
{
	border: 1px solid #aeb7c0;
}

.post_form .input_left
{
	width: 354px;
	float: left;
	margin-right: 5px;
}

.post_form .input_left div
{
	width: 100%;
}
.post_form .input_right
{
	width: 261px;
	float: left;
}
.post_form .input_right div
{
	width: 100%;
}
.post_form .input_right div input
{
	width: auto;
}
.post_form .input_main
{
	width: 454px;
	float: left;
	margin-right: 5px;
}
.post_form .input_main input
{
	width: auto;
	float: left;
}
.post_form .input_main .button
{
	width: auto;
	float: right;
}
.post_form .input_right input
{
	width: auto;
	float: left;
}
.post_form .input_right label
{
	float: left;
}
.post_form .input_module
{
	width: 161px;
	float: right;
}
.post_form br
{
	clear: both;
}


.post_form #tags
{
	height: 50px;
}

.post_form .input_main textarea
{
	height: 250px;
}

.post_form .input_main#quality_warning
{
	background:#FFFBC9 url(http://images.hamsterpaj.net/drivers-license/lamp.png) no-repeat scroll 0%;
	border:1px solid #F0DCA1;
	padding:3px 3px 3px 55px;
	width: 394px;
	margin-top: 3px;
}

.post_form .content_control
{
	border: 1px solid #ababab;
	margin-left: 8px;
	padding: 3px;
}

.post_form .content_control .control_item
{
}

.post_form .content_control #control_item_smilies
{
	display: block;
}

.post_form .content_control #content_control_select
{
	width: 100%;
}

.post_form .content_control #control_item_markup dl dt
{
	width: 75px;
	clear: left;
	float: left;
}

.post_form .content_control #control_item_markup li, .post_form .content_control #control_item_markup ul, .post_form .content_control #control_item_markup ol
{
	margin: 0px;
	padding: 0px;
}

.post_form #preview, #submit_button_div
{
	display: none;
}

.post_form #preview img
{
	max-width: 478px;
}

.post_form #preview .content
{
	border: 1px solid #abacb3;
	padding: 5px;
}

.posts_page_list
{
	list-style-type: none;
	padding: 0px;
}

.posts_page_list li
{
	display: inline;
	padding-right: 5px;
}

.misspelling
{
	color: red;
	cursor: help;
}

.spelling_suggestion
{
	display: none;
}

#quality_tips
{
	background:#FFFBC9 url('http://images.hamsterpaj.net/drivers-license/lamp.png') no-repeat top left;
	border: 1px solid #F0DCA1;
	padding: 7px 3px 3px 3px;
}

#quality_tips h2
{
	padding-left: 50px;
	margin-bottom: 13px;
}

#quality_tips ul
{
	padding: 0;
}



